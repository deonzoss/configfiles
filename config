        status_command /usr/share/bumblebee-status/bumblebee-status -m color8 color7 color6 color5 color4 color3 color2 color1 color1 color1 color1 color1 color1 color1 color1 color1 color1 color1 amixer brightness battery cpu load nic pacman weather date time -p interval=1 time.format="%l:%M %p" date.format="%a,%b %d %Y" home.path=/home weather.unit=imperial disk.showSize=no -t solarized-powerline
	colors{
		background $bg-color	
		separator #757575
		#			border			background		text
		focused_workspace	$focused-outline-color		$bg-color		$text-color
		inactive_workspace	$inactive-bg-color	$inactive-bg-color	$inactive-text-color
		urgent_workspace	$urgent-bg-color	$urgent-bg-color	$inactive-text-color
	}
	position top

}

